<h1><%= title %></h1>

<form method="POST">
    <label for="name">Category:</label>
    <input 
        type="text" 
        name="name" 
        placeholder="Gaming console"
        value="<%= category ? category.name : '' %>"
        required
    />
    <button type="submit">Submit</button>
  </form>
  <% if (errors) { %>
    <ul>
      <% errors.forEach(function(error) { %>
        <li>
          <%= error.msg %>
        </li>
      <% }); %>
    </ul>
  <% } %>